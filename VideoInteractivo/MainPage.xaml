<Page
    x:Class="VideoInteractivo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VideoInteractivo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <ImageBrush x:Key="ButtonBackgroundMinecraft" ImageSource="/Assets/Videos/boton.jpg"/>
        <SolidColorBrush x:Key="ButtonBorderMinecraft" Color="#FFA59090"/>
        <FontFamily x:Key="ButtonFontMinecraft">Sitka Display Semibold</FontFamily>
    </Page.Resources>

    <Grid FocusVisualPrimaryBrush="White" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="500*"/>
        </Grid.RowDefinitions>
        <Viewbox Grid.RowSpan="2" Stretch="Fill">
            <Grid Height="1000" Width="1500">
                <MediaElement x:Name="video" Source="/Assets/Videos/minecraft_1.mp4" AreTransportControlsEnabled="True" MediaEnded="video_MediaEnded">
                    <MediaElement.TransportControls>
                        <MediaTransportControls/>
                    </MediaElement.TransportControls>
                </MediaElement>
                <Button Background="{StaticResource ButtonBackgroundMinecraft}" x:Name="Boton_Dialog1_1" Content="Esperar a que se haga de dia" Height="95" Margin="286,0,0,0" Width="327" Click="Boton_Dialog1_1_Click" Visibility="Collapsed" FocusVisualSecondaryBrush="{x:Null}" Foreground="White" FocusVisualPrimaryBrush="{x:Null}" FontFamily="{StaticResource ButtonFontMinecraft}" FontSize="18" BorderBrush="{StaticResource ButtonBorderMinecraft}">
                </Button>
                <Button x:Name="Boton_Dialog1_2" Content="Ir a explorar" Height="95" Margin="849,0,0,0" Width="327" Click="Boton_Dialog1_2_Click" Visibility="Collapsed" Background="{StaticResource ButtonBackgroundMinecraft}" BorderBrush="{StaticResource ButtonBorderMinecraft}" FontFamily="{StaticResource ButtonFontMinecraft}" FontSize="18"/>
                <Button x:Name="Boton_Reintentar1" Content="Reintentar" Margin="0,528,0,0" VerticalAlignment="Top" Visibility="Collapsed" Click="Boton_Reintentar1_Click" Background="{StaticResource ButtonBackgroundMinecraft}" BorderBrush="{StaticResource ButtonBorderMinecraft}" FontFamily="{StaticResource ButtonFontMinecraft}" FontSize="18" HorizontalAlignment="Center" Height="134" Width="616"/>
                <TextBlock x:Name="Text_Dialog" HorizontalAlignment="Left" Margin="626,547,0,0" Text="OPCION ELEGIDA INCORRECTA" TextWrapping="Wrap" VerticalAlignment="Top" FocusVisualPrimaryBrush="#FF3F3434" Foreground="Red" Height="52" Width="294" FontSize="18" Visibility="Collapsed">
                    <TextBlock.FocusVisualSecondaryBrush>
                        <ImageBrush/>
                    </TextBlock.FocusVisualSecondaryBrush>
                </TextBlock>
                <Button x:Name="boton_hola" Content="Hola" Height="69" Width="125" HorizontalAlignment="Center" Visibility="Collapsed"/>

            </Grid>
        </Viewbox>

    </Grid>
</Page>
